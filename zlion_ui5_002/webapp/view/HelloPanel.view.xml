<mvc:View controllerName="lion.zlionui5002.controller.HelloPanel"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Panel id="helloPanel" headerText="{i18n>helloPanelTitle}" class="sapUiResponsiveMargin" width="auto" expandable="{device>/system/phone}" expanded="{= !${device>/system/phone} }" accessibleRole="Region">
        <content>
            <Button id="helloDialogButton" icon="sap-icon://world" text="{i18n>openDialogButtonText}" press=".onOpenDialog" class="sapUiSmallMarginEnd sapUiVisibleOnlyOnDesktop" />
            <Button id="showHelloButtonText" text="{i18n>showHelloButtonText}" press=".onShowHello" class="myCustomButton" />
            <Input id="input" value="{/recipient/name}" description="Hello {/recipient/name}" valueLiveUpdate="true" width="60%" />
            <!-- <FormattedText id="formattedText" htmlText="Hello {/recipient/name}" class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText" /> -->
        </content>
    </Panel>
</mvc:View>
