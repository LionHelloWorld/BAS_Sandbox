<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:u="sap.ui.unified"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
>
    <Dialog
        id="_idFileDialog"
        title="{i18n>fileDialogTitle}"
    >
        <VBox
            id="_idVBox"
            width="100%"
        >
            <core:InvisibleText
                id="_idInvisibleText"
                text="{i18n>uploadf2oTitle}"
            />
            <f:SimpleForm
                id="_idSimpleForm"
                editable="true"
                layout="ResponsiveGridLayout"
                maxContainerCols="2"
            >
                <f:content>
                    <Label
                        id="_idFileUploadlabel"
                        required="true"
                        text="{i18n>uploadf2olabel}"
                    />
                    <u:FileUploader
                        id="_idFileUpload"
                        name="internalFileUpload"
                        change="onFileChange"
                        width="100%"
                        uploadComplete="onUploadComplete"
                        style="Emphasized"
                        fileType="*"
                        placeholder="{i18n>uploadContentPlaceholder}"
                        tooltip="{i18n>uploadTooolTip}"
                        sendXHR="false"
						multiple="true"
                    />
                </f:content>
            </f:SimpleForm>
        </VBox>
        <footer>
            <Toolbar id="_idFooterToolbar">
                <content>
                    <Button
                        id="_idUploadButton"
                        text="{i18n>uploadButtonTxt}"
                        type="Emphasized"
                        press="onUploadButtonPress"
                        icon="sap-icon://upload-to-cloud"
                    />
                    <Button
                        id="_idCancelButton"
                        text="{i18n>cancelButtonTxt}"
                        press="onCancelButtonPress"
                        icon="sap-icon://cancel"
                    />
                </content>
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
